#!/bin/sh
set -e
service php7.0-fpm start

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- php "$@"
fi


if [ -z "$(ls -A $WORKDIR/$PROJECT_NAME)" ]; then
	cd $WORKDIR

	composer create-project aeria/work $PROJECT_NAME
	# /server

	# ln -sf $WORKDIR/nginx/ $WORKDIR/$PROJECT_NAME/server/*
	ln -sf $WORKDIR/nginx/$PROJECT_NAME $WORKDIR/$PROJECT_NAME/server/

	echo "something" > $WORKDIR/$PROJECT_NAME/server/error.conf

fi

exec "$@"